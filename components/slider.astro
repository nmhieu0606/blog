---
const { img1, img2, img3, img4 } = Astro.props;
---

<div class="body-slider .col-12">
  <div class="slider">
    <div class="slides">
      <input type="radio" name="rd-btn" id="rd_1" />
      <input type="radio" name="rd-btn" id="rd_2" />
      <input type="radio" name="rd-btn" id="rd_3" />
      <input type="radio" name="rd-btn" id="rd_4" />
      <div class="slide first">
        <a href="/">
          <img class="object-cover h-48 w-96" src="/5.jpg" alt="" />
        </a>
      </div>
      <div class="slide">
        <a href="/">
          <img class="object-cover h-48 w-96" src="/6.jpg" alt="" />
        </a>
      </div>
      <div class="slide">
        <a href="/">
          <img class="object-cover h-48 w-96" src="/7.jpg" alt="" />
        </a>
      </div>
      <div class="slide">
        <a href="/">
          <img class="object-cover h-48 w-96" src="/8.jpg" alt="" />
        </a>
      </div>
      <div class="navigation-auto">
        <div class="auto-btn-1"></div>
        <div class="auto-btn-2"></div>
        <div class="auto-btn-3"></div>
        <div class="auto-btn-4"></div>
      </div>
    </div>
    <div class="navigation-manual">
      <label for="rd_1" class="manual-btn"></label>
      <label for="rd_2" class="manual-btn"></label>
      <label for="rd_3" class="manual-btn"></label>
      <label for="rd_4" class="manual-btn"></label>
    </div>
  </div>
</div>
<style>
  .body-slider {
    position: relative;
    margin: 0;
    padding: 0;
    height: 65vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #23e3c9;
  }
  .slider {
    position: absolute;
    width: 1000px;
    height: 350px;
    border-radius: 10px;
    overflow: hidden;
  }
  .slides {
    width: 500%;
    height: 350px;
    display: flex;
  }
  .slides input {
    display: none;
  }
  .slide {
    width: 20%;
    transition: 2s;
  }
  .slide img {
    width: 1000px;
    height: 350px;
    
  }
  .navigation-manual {
    position: absolute;
    width: 100%;
    margin-top: -40px;
    display: flex;
    justify-content: center;
  }
  .manual-btn {
    border: 2px solid #40d3dc;
    padding: 5px;
    border-radius: 10px;
    cursor: pointer;
    transition: 1s;
  }
  .manual-btn:not(:last-child) {
    margin-right: 40px;
  }
  .manual-btn:hover {
    background-color: #40d3dc;
  }
  #rd_1:checked ~ .first {
    margin-left: 0;
  }
  #rd_2:checked ~ .first {
    margin-left: -20%;
  }
  #rd_3:checked ~ .first {
    margin-left: -40%;
  }
  #rd_4:checked ~ .first {
    margin-left: -60%;
  }
  .navigation-auto {
    position: absolute;
    display: flex;
    width: 100%;
    justify-content: center;
    margin-top: 310px;
  }
  .navigation-auto div {
    border: 2px solid #40d3dc;
    padding: 5px;
    border-radius: 10px;
    transition: 1s;
  }

  .navigation-auto div:not(:last-child) {
    margin-right: 40px;
  }
  #rd_1:checked ~ .navigation-auto .auto-btn-1 {
    background: #40d3dc;
  }
  #rd_2:checked ~ .navigation-auto .auto-btn-2 {
    background: #40d3dc;
  }
  #rd_3:checked ~ .navigation-auto .auto-btn-3 {
    background: #40d3dc;
  }
  #rd_4:checked ~ .navigation-auto .auto-btn-4 {
    background: #40d3dc;
  }
  @media only screen and (max-width: 46.1875em) {
    .slide img {
      width: 50%;
      max-width: 1000px;
      height: auto;
    }
  }
  @media only screen and (max-width: 46.25em) and (max-width: 63.9375) {
  }
</style>
<script>
  var couter = 1;
  setInterval(function () {
    document.getElementById("rd_" + couter).checked = true;
    couter++;
    if (couter > 4) {
      couter = 1;
    }
  }, 4000);
</script>
